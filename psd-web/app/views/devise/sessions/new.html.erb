<% title = "Sign in" %>
<% content_for :page_title, title %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <%= resource.decorate.error_summary %>

    <h1 class="govuk-heading-l"><%= title %></h1>

    <p class="govuk-body">
      If you do not have an account, you will need to be invited by OPSS Processing Team before you can use the service.
    </p>

    <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
      <%= resource.email_input %>
      <%= resource.password_input %>

      <%= govukButton(text: "Continue") %>

      <div class="govuk-body">
        <%= link_to "Forgot your password?", new_password_path(resource), class: "govuk-link" %>
      </div>
    <% end %>
  </div>
</div>
