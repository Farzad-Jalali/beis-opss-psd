<% title = "Check your phone" %>
<% content_for :page_title, title %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <%= govukErrorSummary(titleText: "There is a problem", errorList: [{text: "You’ve entered too many numbers", href: "#two-factor"}]) %>

    <%= govukErrorSummary(titleText: "There is a problem", errorList: [{text: "You haven’t entered enough numbers", href: "#two-factor"}]) %>

    <%= govukErrorSummary(titleText: "There is a problem", errorList: [{text: "Incorrect security code", href: "#two-factor"}]) %>

    <%= govukErrorSummary(titleText: "There is a problem", errorList: [{text: "Security code has expired", href: "#two-factor"}]) %>

    <h1 class="govuk-heading-l"><%= title %></h1>

    <p class="govuk-body">We have sent you a security code by text message.</p>

    <%= render "components/govuk_input", id: "two-factor", name: "two_factor", type: "text", classes: "govuk-input--width-5", label: { text: "Enter security code" }, attributes: { pattern: "[0-9]*", inputmode: "numeric" } %>

    <%= govukButton(text: "Continue") %>

    <div class="govuk-body">
      <%= link_to "Not received a text message?", text_not_received_path, class: "govuk-link" %>
    </div>

  </div>
</div>
