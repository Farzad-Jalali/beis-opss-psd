<% title = "Sign in" %>
<% content_for :page_title, title %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <%= govukErrorSummary(titleText: "There is a problem", errorList: [{text: "Enter your password", href: "#password"}]) %>

    <%= govukErrorSummary(titleText: "There is a problem", errorList: [{text: "Enter your email address", href: "#email"}]) %>

    <%= govukErrorSummary(titleText: "There is a problem", errorList: [{text: "Enter your email address in the correct format, like name@example.com", href: "#email"}]) %>

    <%= govukErrorSummary(titleText: "There is a problem", errorList: [{text: "Enter correct email address and password", href: "#email"}]) %>

    <h1 class="govuk-heading-l"><%= title %></h1>

    <p class="govuk-body">If you do not have an account, you will need to be invited by OPSS Processing Team before you can use the service.</p>

    <%= render "components/govuk_input", id: "email", name: "email", type: "email", classes: "app-!-max-width-two-thirds", label: { text: "Email address" } %>

    <%= render "components/govuk_input", id: "password", name: "password", type: "password", classes: "app-!-max-width-two-thirds", label: { text: "Password" } %>


    <%= govukButton(text: "Continue") %>

    <div class="govuk-body">
      <%= link_to "Forgot your password?", reset_password_path, class: "govuk-link" %>
    </div>

  </div>
</div>
